# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/zentigrity
MONGODB_URI_TEST=mongodb://localhost:27017/zentigrity_test

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Blockchain Configuration (Avalanche)
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_CHAIN_ID=43113
DAO_WALLET_PRIVATE_KEY=your_dao_wallet_private_key_here

# Simplified Smart Contract (Single Contract)
ZENT_SIMPLE_ADDRESS=your_zent_simple_contract_address_here

# Currency Conversion
AVAX_PRICE_INR=2500

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=uploads/

# IPFS Configuration (for image storage)
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100